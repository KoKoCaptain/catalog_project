<%= form_for(@item) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :avatar %>
    <%= f.text_field :avatar %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.submit 'Create new item!', class: "btn btn-large btn-primary" %>
<% end %>