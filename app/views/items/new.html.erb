<%= form_for(@item) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :avatar %>
    <%= f.text_field :avatar %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.fields_for :categories do |category| %>
        <%= category.label :id, 'Parent category:' %><br>
        <%= category.select(:id, options_from_collection_for_select(Category.all, :id, :name, @item.categories.ids),
                     {include_blank: 'None'}, {:class => 'form-control'}) %>
    <% end %>
    <%= f.submit 'Create new item!', class: "btn btn-large btn-primary" %>
<% end %>