<%= form_for(@item) do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :avatar %>
    <%= f.text_field :avatar %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%=f.label :parent_category %>
    <%= f.select(:id, options_from_collection_for_select(Category.all, :id, :name, @item.categories.map(&:id)),
                 {include_blank: 'None'}, {:class => 'form-control'}) %>

    <%= f.submit 'Create new item!', class: "btn btn-large btn-primary" %>
<% end %>