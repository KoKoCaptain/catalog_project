<h1>Here will be my catalog!</h1>

<%= will_paginate %>
<ul class="items">
  <% @items.each do |item| %>
    <li>
      <p>Item name:</p>
      <%= link_to item.name, item_path(item) %> <br>
      <%= image_tag(item.item_image) if item.item_image? %><br>
      <p>Description:</p>
      <%= item.description %><br>
      <% if item.categories.any? %>
        <p> Category: </p>
        <p>
          <% item.categories.each do |category| %>
            <%= link_to category.name, category_path(category) %>
          <% end %>
        </p>
        <% else %>
          <p> This item doesn't have category! </p>
        <% end %>
      </li>
  <% end %>
</ul>
<%= will_paginate %>